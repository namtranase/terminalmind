#!/bin/bash

# Function to check if PyPDF2 is installed
check_and_install_pypdf2() {
    if ! python3 -c "import PyPDF2" &> /dev/null; then
        echo "PyPDF2 is not installed. Installing it now..."
        pip3 install PyPDF2
    else
        echo "PyPDF2 is already installed."
    fi
}

# Call the function
check_and_install_pypdf2
